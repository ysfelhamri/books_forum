{
    "builds": [{
        "src": "books_forum/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "public/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "books_forum/wsgi.py"
        }
    ]
}